<%layout('boilerplate')%>

<title>Order Details</title>
<body>
    <body style="background-image:url('<%= user.username !=  `admin` ?`https://s1.1zoom.me/b5655/742/Fast_food_Hamburger_Vegetables_520537_1920x1080.jpg`:`https://s1.1zoom.me/big0/707/389949-svetik.jpg`  %>');">
   
        <h1 style="color:white;font-size:25px;font-weight:400;margin-left:20px;">MY Order</h1>
        
        
        
        <section class="right <%= user.username !=  `admin` ?`userBg`:`adminBg ` %> "  >
            <form action="/logout" method="GET"><button class='logoutBtn'>LOGOUT</button></form>
                    <div class="circleBox" style="margin:29px;"> 
                        <div class="circle" style="background-size:cover;background-position:center;background-image:url('https://media4.giphy.com/media/5bGYUuT3VEVLa/200.gif');height:50px;width:50px;border-radius:100%;"></div>
                        <h6 style="color:white;margin-top:15px;margin-left:7px;"><%=user.username%> </h6>
                    </div>
                    <form action="/home" method="GET"><button style="top:210px;" class="addBtn util-up">HOME</button></form> 
                        <form action="/myBag" method="GET">
                            <button class="addBtn" style="color:white"><var style="font-style:normal;">MY BAG<sup class="supersript" >    <%= bagCount%></sup></var></button>
                        </form> 
                        <div class="rightBottomImg"></div>     
        </section>

        <%if(user.username!='admin'){%>
        <% for(i of orderBag){%>
        
            <div class='containerOuter'>
            <div class='row'>
              
                  
                <div class="img"  style='background-image:url("<%=i.url%>")'> </div>
                <h6 class="name"><%=i.itemname%> </h6> 
             
                 
                    <div class=priceTag>$<%=i.price%></div>
                   
             
                
          
            </div>
        
        </div>
        
     
        <% }%> 
     
        <% }else{%>

            <% for(i of deliverBag ){%>
        
                <div class='containerOuter'>
                <div class='row'>
                  
                      
                    <div class="img"  style='background-image:url("<%=i.url%>")'> </div>
                    <h6 class="name"><%=i.itemname%> </h6> 
                 
                     
                        <div class=priceTag>$<%=i.price%></div>
                       
                 
                    
              
                </div>
            
            </div>
            
         
            <% }%> 

    



        <% }%> 




        <div class='emptyContainerOuter <%=bagCount ==  0 ?``:'hidden' %>'>
            <div class="gap " >
               
                <div class="emptyLogo " style="background-image:url('https://github.com/john-fermadez/step-images/blob/main/assets/Icons/bag-empty.png?raw=true');" ></div>
                
                <h2 class="emptyMsg1 "> YOUR CART IS EMPTY<h6 class="emptyMsg2 ">Order  it now get in your hands</h6></h2>
                <form action="/myBag" class="" method="GET"><button class="btns emptyBtn ">Order Now</button></form>
            </div>
        
        
        
        </div>




</body>


